<UserControl x:Class="Resevoom.Views.MakeReservationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Resevoom.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>           
        </Grid.RowDefinitions>
        
        <TextBlock Text="Make Reservation"
                   Style="{StaticResource Header}"
                   Grid.Row="0" />

        <Grid Grid.Row ="1" Margin="0 25 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height= "auto"/>
                <RowDefinition Height= "auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Name" Grid.Row="0"/>
            <TextBox Grid.Row="1" Margin=" 0 5 0 0" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <Grid Grid.Row ="2" Margin="0 10 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height= "auto"/>
                    <RowDefinition Height= "auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn"  />
                    <ColumnDefinition Width="auto" SharedSizeGroup="SecondColumn" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Floor Number" Grid.Row="0" Grid.Column="0"/>

            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding FloorNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 0" />

            <TextBlock Text="Room Number" Grid.Row="0" Grid.Column="1" Margin="5 0 0 0"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RoomNumber, UpdateSourceTrigger=PropertyChanged}" Margin="5 0 0 0"/>       
        </Grid>
        <Grid Grid.Row ="3" Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height= "auto"/>
                <RowDefinition Height= "auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn" />
                <ColumnDefinition Width="auto" SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Start Date" Grid.Row="0" Grid.Column="0" Margin="0 5 0 0"/>
            <DatePicker Grid.Row="1" Grid.Column="0" SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}" Margin=" 0 5 0 0"/>

            <TextBlock Text="End Date" Grid.Row="0" Grid.Column="1" Margin=" 5 5 0 0" />
            <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}" Margin="5 5 0 0"/>

        </Grid>
        <StackPanel Grid.Row="4" Margin="0 10 0 0"  Orientation="Horizontal">
            <Button Content="Submit" Command="{Binding SubmitCommand}" />
            <Button Margin="5 0 0 0" Content="Cancel" Command="{Binding CancelCommand}"/>

        </StackPanel>

    </Grid>
</UserControl>
